#ifndef MY_STRING_H_
#define MY_STRING_H_


static inline void to_smallwords(char* words)
{
	while(*words){
		if(*words >= 'A' && *words <= 'Z'){
			*words = 'a'+(*words-'A');
		}
		++words;
	}
}

#endif /* MY_STRING_H_ */
