#ifndef TCP_CLIENT_H_
#define TCP_CLIENT_H_


namespace ANTNET
{
	typedef unsigned int NETIP;

	void tcp_init();
	void tcp_uninit();

	NETIP tcp_gethost(const char* host);

	int tcp_connect(NETIP ip,int port);

	int tcp_send_msg(int netid,void* msg,int len);

	int tcp_close(int netid);
}

#endif
